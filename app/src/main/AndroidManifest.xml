<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zhou.v2ex">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".Z2EX"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.activity.NodesActivity" />
        <activity android:name=".ui.activity.TopicDetailActivity" />
        <activity android:name=".ui.activity.NodeActivity" />
        <activity android:name=".ui.activity.MemberActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.v2ex.com"
                    android:pathPattern="/member/.*"
                    android:scheme="http" />
                <data
                    android:host="www.v2ex.com"
                    android:pathPattern="/member/.*"
                    android:scheme="https" />
                <data
                    android:host="v2ex.com"
                    android:pathPattern="/member/.*"
                    android:scheme="http" />
                <data
                    android:host="v2ex.com"
                    android:pathPattern="/member/.*"
                    android:scheme="https" />
            </intent-filter>
        </activity>

    </application>

</manifest>
